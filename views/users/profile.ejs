<%- include('../includes/header.ejs') %>
<style>
  .row{
	  height: 90vh;
	  width: 100%;
	  margin: 0;
	  border:1px solid black;
  }
  .profilePhoto{
	  height: 90vh;
	  border: 1px solid black;
  }
  .profileDetails{
	  height: 90vh;
	  border: 1px solid black;
  }


</style>
</head>
<body>
	<%- include('../includes/navigation.ejs')%>
		<div class="container-fluid">
			<form action="/profile" method="POST" enctype="multipart/form-data"> 
			<div class="row">
				
				<div class="col-lg-3 profilePhoto d-flex align-items-center justify-content-center flex-column">
					<img class="picture img-thumbnail rounded-circle"
					src="
					<%=typeof profile.profile_pic  == 'undefined' ? 
					'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png' : profile.profile_pic  %>"
					 width="70%" heigth="700px" alt="profile_pic">

					<input type="file" class="mt-3"  name="myupload" placeholder="Update Picture">
				</div>




				<div class="col-lg-9 profileDetails">
					<div class="text-center h2">Update Your  Profile ðŸ‘‡</div>
					
						<div class="form-group">
						  <label for="exampleInputEmail1">username</label>
						  <input type="text" class="form-control" value="<%= profile.username %>" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" readonly>
						  <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your username with anyone else.</small> -->
						</div>

						<div class="form-group">
						  <label for="example">college</label>
						  <input type="text" class="form-control" id="example" name="college" 
						  value="<%= typeof profile.college =='undefined' ? '' : profile.college %>">
						</div>

						<div class="form-group">
							<label for="example">course</label>
							<input type="text" class="form-control" id="example" name="course"
							value="<%= typeof profile.course =='undefined' ? '' : profile.course %>">
						  </div>


						<div class="form-group">
							<label for="example">semester</label>
							<input type="number" class="form-control" id="example" name="semester"
							value="<%= typeof profile.semester =='undefined' ? '' : profile.semester %>">
						</div>

						<div class="form-group">
							<label for="example">contact_no</label>
							<input type="number" class="form-control" id="example" name="contact_no"
							value="<%= typeof profile.contact_no =='undefined' ? '' : profile.contact_no %>">
						</div>

						<div class="form-group">
							<label for="exampleInputPassword1">address</label>
							<textarea type="number" class="form-control" rows="3" id="exampleInputPassword1" name="address" style="resize: none;">
							<%= typeof profile.college =='undefined' ? '' : profile.college %>
							</textarea>
						</div>
						
						<button type="submit" class="btn btn-primary">Submit</button>
					  
				</div>
			
			</div>
		</form>	
		</div>


		
	<%- include('../includes/footer.ejs')%>
</body>
</html>