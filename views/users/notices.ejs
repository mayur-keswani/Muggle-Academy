<%- include('../includes/header.ejs')%>


	<link rel="stylesheet" href="/assets/customCSS/notices.css">
	<%- include('../includes/navigation.ejs') %>

	<% if(!notices) { %>
		<p class="text-center text-primary">No notice yet</p>
	<% } %>
	<div class="container-fluid mx-3">
	<% Object.entries(notices).forEach(([key,value]) =>{ %>
		
	 <div class="row mb-4">
		<div class="h5 col-lg-12 col-12"><%= key %></div>
		<% value.forEach((notice)=>{ %>
			<div class="card col-lg-3 col-6 pb-0">
				<form action="/notices/<%=notice._id%>" method="POST">
				  <div class="m-3 pr-0">
					  <div class=" pl-2 pr-0">
						<h5 class="title d-inline"><%= notice.subject %></h5>
						<input type="hidden" id="username" name="username" value="<%= notice.userId.username%>">
						<div class="menu-dropdown float-right m-0 p-0">
							<button class="dropbtn m-0 p-0">
								<i class="fas fa-ellipsis-v"></i>
							</button>
							<div class="dropdown-content m-0 p-0">
							  <a href="/notices/<%= notice._id %>">View<i class="text-right fas fa-eye  ml-5"></i></a>
							  <a href="/archieve/<%= notice._id %>">Save <i class="text-right fas fa-bookmark  ml-5"></i></a>
							</div>
						</div> 
						

						
									
					  </div>
				  </div>
			   </form>		
			  </div>
		<% }) %>	

	</div>
	<% })%>
    </div>

	<%- include('../includes/footer.ejs') %>
</body>

</html>