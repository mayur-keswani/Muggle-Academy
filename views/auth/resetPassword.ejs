<%- include('../includes/header.ejs')%>

	<link rel="stylesheet" href="/assets/customCSS/login.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
</head>
<body>
	<div class="login-section">
        <div class="container ">
            <div class="row pt-5">
				<div class="col-lg-6 col-sm-12 login-illustration">
                    <img src="/assets/login.svg" width="80%"/>
                </div>
                <div class="col-lg-6 col-sm-12 login-form p-2">
                    <header class="mb-4"><h2>Reset Password</h2></header>
                     <% if(successMessage){ %>
                        <div class="text-success text-center h6"><i class="zmdi zmdi-alert-octagon"> </i><%=successMessage%></div>
                    <%}%>
                    <form class="m-4" action="/reset-password/<%=userId %>" method="POST" >
                        
                        <div class="form-group row p-0 mx-0">
                            <label class="col-2 col-form-label">
                                <i class="zmdi zmdi-lock zmdi-hc-lg"></i>
                            </label>
                            <input type="password" name="password" class="form-control col-10" placeholder="Enter New Password">
                        </div>
                        <div class="form-group row p-0 mx-0">
                            <label class="col-2 col-form-label">
                                <i class="zmdi zmdi-lock zmdi-hc-lg"></i>
                            </label>
                            <input type="password" name="confirm_password" class="form-control col-10" placeholder="Conform Password">
                        </div>
                        <% if(successMessage){%>
                            <div class="text-right text-secondary">
                            <a href="/signin">Move To Login</a>
                        </div>
                        <%}%>
                         
                       
                        <!-- <div class="bg-light float-right" style="width: 230px;"> 
                            <h5>Demo Credential</h5> 
                            <h6>Email : johndoe@gmail.com </h6>
                            <h6>password : john123  </h6>
                        </div> -->
                        <input type="submit" class="btn btn-primary btn-lg m-3" value="Reset Password"> </input>
                       
						<hr>
						
                        

                      </form>
                </div>
                
            </div>
           
        </div>
    </div>
	<%- include('../includes/footer.ejs')%>
</body>